{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
      }
    },
    {
      "name": "POST with valid data (will fail without SMTP config)",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест",
        "email": "test@example.com",
        "phone": "+7 900 123-45-67",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": [200, 500],
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with missing fields returns 400",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
