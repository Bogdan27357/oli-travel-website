# ============================================
# Конфигурация приложения Oli Travel
# ============================================
# Скопируйте этот файл в .env и заполните своими значениями

# ============================================
# DATABASE - База данных PostgreSQL
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/olitravel

# ============================================
# AUTHENTICATION - Аутентификация
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-session-secret-key-change-this

# Пароли администраторов (хешируйте в production!)
ADMIN_PASSWORD=admin123
MANAGER_PASSWORD=manager123

# ============================================
# APPLICATION - Настройки приложения
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# URL вашего сайта
VITE_APP_URL=https://ваш-домен.ru
VITE_API_URL=https://ваш-домен.ru/api

# ============================================
# EXTERNAL SERVICES - Внешние сервисы
# ============================================

# Email SMTP (для отправки уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@olitravel.ru

# Telegram Bot (опционально, для уведомлений)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# ============================================
# PAYMENT - Платежные системы (опционально)
# ============================================

# ЮКасса (Yandex Checkout)
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# Robokassa
ROBOKASSA_MERCHANT_LOGIN=your-merchant-login
ROBOKASSA_PASSWORD_1=your-password-1
ROBOKASSA_PASSWORD_2=your-password-2

# ============================================
# STORAGE - Хранилище файлов
# ============================================

# S3-совместимое хранилище (Yandex Object Storage, AWS S3, MinIO)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_REGION=ru-central1
S3_BUCKET=olitravel-images
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Или локальное хранилище
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# ============================================
# ANALYTICS - Аналитика (опционально)
# ============================================

# Яндекс.Метрика
YANDEX_METRIKA_ID=your-metrika-id

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ============================================
# MONITORING - Мониторинг (опционально)
# ============================================

# Sentry (отслеживание ошибок)
SENTRY_DSN=your-sentry-dsn

# ============================================
# RATE LIMITING - Ограничение запросов
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS - Настройки CORS
# ============================================
CORS_ORIGIN=*
# Или конкретные домены: https://ваш-домен.ru,https://www.ваш-домен.ru

# ============================================
# CACHE - Кэширование (Redis)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# BACKUP - Резервное копирование
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=olitravel-backups
